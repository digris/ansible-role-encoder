########################################################################
# odr dab & mot encoder processes
########################################################################
[group:odr-encoder]
programs=audioenc,padenc
priority=500

########################################################################
# dab encoder
########################################################################
[program:audioenc]
priority=102
directory={{ encoder_run_dir }}
command=/usr/local/bin/odr-audioenc
{% if encoder_soundsystem == 'alsa' %}
    -d default
{% endif %}
{% if encoder_soundsystem == 'jackd' %}
    -j encoder
{% endif %}
{% if encoder_audio_interface_drift_compensation %}
    -D
{% endif %}
    -r 48000
    -c 2
{% for output in encoder_outputs %}
    -o {{ output }}
{% endfor %}
    -b {{ encoder_bitrate }}
    -p {{ encoder_pad_size }}
    -P pad.fifo
user={{ encoder_user }}
startretries=120
autostart=true
autorestart=true
redirect_stderr=True
loglevel=info
stdout_logfile=syslog

########################################################################
# mot encoder
########################################################################
[program:padenc]
priority=103
directory={{ encoder_run_dir }}
command=/usr/local/bin/odr-padenc
    --pad {{ encoder_pad_size }}
    --remove-dls
    --dir meta/slides
    --sleep 30
    --dls meta/dls.txt
    --output pad.fifo
user={{ encoder_user }}
autostart=true
autorestart=true
redirect_stderr=True
loglevel=info
stopsignal=KILL
stdout_logfile=syslog
